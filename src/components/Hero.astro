---
const sections = [
  { name: "Clases", href: "#clases", icon: "dumbbell" },
  { name: "Horarios", href: "#horarios", icon: "clock" },
  { name: "Comunidad", href: "#comunidad", icon: "users" },
  { name: "Contacto", href: "#contacto", icon: "mail" },
];

// Número de WhatsApp (reemplaza con el número real)
const whatsappNumber = "5491112345678"; // Ejemplo: formato internacional sin el +
const whatsappMessage = "Hola! Me interesa la prueba gratis del gimnasio.";
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Video Background -->
  <div class="absolute inset-0 z-0 bg-black">
    <video 
      autoplay 
      muted 
      loop 
      playsinline
      preload="auto"
      class="w-full h-full object-cover brightness-50"
      id="background-video"
    >
      <!-- Corregir la ruta del video: en Astro, los archivos en /public se sirven desde la raíz -->
      <source src="/gym1.mp4" type="video/mp4">
      <!-- Fallback para navegadores que no soportan video -->
      <img 
        src="/images/gym-background.png" 
        alt="Interior del gimnasio con equipamiento colorido" 
        class="w-full h-full object-cover brightness-50"
      />
    </video>
  </div>

  <!-- Content Container -->
  <div class="relative z-10 flex flex-col justify-center items-center h-screen px-4">
    <div class="text-center max-w-screen-2xl mx-auto">
      <h1 class="text-5xl md:text-7xl lg:text-9xl font-anton text-yellow-400 tracking-wider mb-4 lg:mt-16">
        ROMPÉ TU LÍMITE. ENTRENÁ DIFERENTE.
      </h1>
      
      <p class="text-xl md:text-2xl lg:text-3xl font-anton text-white tracking-wide mb-12 opacity-90">
        Probá sin compromiso. La primera va por nosotros.
      </p>
    
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-gradient-to-r from-green-500 to-green-600 text-white px-8 py-4 font-anton text-xl rounded-md flex items-center justify-center gap-2 hover:from-green-600 hover:to-green-700 transition-all duration-300 shadow-lg transform hover:-translate-y-1"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
          </svg>
          CONSULTAR POR WHATSAPP
        </a>
        <a
          href="#contacto"
          class="bg-white text-black px-8 py-4 font-anton text-xl rounded-md flex items-center justify-center gap-2 hover:bg-gray-100 transition-all duration-300 shadow-lg transform hover:-translate-y-1"
        >
          ÚNETE AHORA <span class="ml-1">→</span>
        </a>
      </div>
    </div>

    <!-- Scroll Down Indicator - Ajustado para mejor centrado y posición en móvil -->
    <div class="absolute bottom-16 md:bottom-10 left-0 right-0 mx-auto w-8 flex justify-center animate-bounce">
      <a href="#clases" class="text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  // Mejorar la reproducción en bucle del video para evitar parpadeos
  document.addEventListener('DOMContentLoaded', function() {
    const videoElement = document.getElementById('background-video');
    
    if (videoElement && videoElement instanceof HTMLVideoElement) {
      const video = videoElement as HTMLVideoElement;
      
      // Precarga completa del video
      video.preload = 'auto';
      
      // Función para intentar reproducir el video
      function playVideo() {
        const playPromise = video.play();
        
        if (playPromise !== undefined) {
          playPromise.catch(error => {
            document.addEventListener('click', function() {
              video.play();
            }, { once: true });
          });
        }
      }
      
      // Intentar reproducir el video inmediatamente
      playVideo();
      
      // Manejar la transición suave entre repeticiones
      video.addEventListener('timeupdate', function() {
        // Si estamos cerca del final del video (0.5 segundos antes)
        if (video.duration > 0 && video.currentTime > video.duration - 0.5) {
          // Preparar para reiniciar suavemente
          video.classList.add('opacity-90');
        } else {
          video.classList.remove('opacity-90');
        }
      });
      
      // Reiniciar el video justo antes del final para evitar el parpadeo
      video.addEventListener('timeupdate', function() {
        // Si estamos muy cerca del final (0.1 segundos antes)
        if (video.duration > 0 && video.currentTime > video.duration - 0.1) {
          // Reiniciar el video un poco antes del final
          video.currentTime = 0;
        }
      });
    }
  });
</script>

<style>
  /* Transición suave para el video */
  video {
    transition: opacity 300ms ease-in-out;
  }
</style>
